<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loading_failure_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F2128"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_status_error_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/load_failed" />

    <TextView
        android:id="@+id/tv_status_error_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/common_loading_failure"
        android:textColor="#5ecdcd"
        android:textSize="12sp" />


</LinearLayout>